rm -rf ./*.retry playbook/*.retry
find ./ -type f -name ".DS_store" | xargs rm -rf

git reflog expire --expire=now --all
git gc --prune=now

[ x"$1" == x"pull" ] && {
    echo ; git reset --hard HEAD^ ; git pull
}
